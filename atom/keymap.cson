'.workspace':
  'ctrl-h': 'window:focus-pane-on-left'
  'ctrl-j': 'window:focus-pane-below'
  'ctrl-k': 'window:focus-pane-above'
  'ctrl-l': 'window:focus-pane-on-right'

  'ctrl-|': 'pane:split-right'
  'ctrl--': 'pane:split-down'

  # Declare keymaps for the commands defined in init.coffee
  'alt-cmd-ctrl-b': 'dot-atom:demo'
  'ctrl-;':         'dot-atom:delete-to-end-of-line'

'.workspace, .command-palette .editor':
  'cmd-p': 'command-palette:toggle'
