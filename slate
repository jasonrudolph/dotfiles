################################################################################
# Slate Configuration                                                          #
#                                                                              #
# https://github.com/jigish/slate                                              #
################################################################################

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.05
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true
config windowHintsBackgroundColor "0;0;0;0"
config windowHintsFontName Futura
config windowHintsFontSize 70
config windowHintsDuration 5

# Left, Right, Top, Bottom
bind h:ctrl,s  push left  bar-resize:screenSizeX*0.6
bind l:ctrl,s  push right bar-resize:screenSizeX*0.4
bind j:ctrl,s  push down  bar-resize:screenSizeY/2
bind k:ctrl,s  push up    bar-resize:screenSizeY/2

# Center
bind space:ctrl,s  move screenSizeX*0.2;screenOriginY screenSizeX*0.6;screenSizeY

# Fullscreen
bind return:ctrl,s  move screenOriginX;screenOriginY screenSizeX;screenSizeY

# Corners
bind i:ctrl,s  corner top-left     resize:screenSizeX*0.6;screenSizeY/2
bind o:ctrl,s  corner top-right    resize:screenSizeX*0.4;screenSizeY/2
bind ,:ctrl,s  corner bottom-left  resize:screenSizeX*0.6;screenSizeY/2
bind .:ctrl,s  corner bottom-right resize:screenSizeX*0.4;screenSizeY/2

# Throw to left/right screen
bind u:ctrl,s  throw left resize
bind p:ctrl,s  throw right resize

# Resize
bind left:ctrl,s:toggle   resize -10  +0
bind right:ctrl,s:toggle  resize +10  +0
bind down:ctrl,s:toggle   resize  +0 +10
bind up:ctrl,s:toggle     resize  +0 -10

# Window Hints
bind esc:cmd  hint ASDFGHJKLQWERTYUIOPZXCVBNM

# Undo last Slate operation
bind z:ctrl,s  undo

# Relaunch Slate and reload .slate file
bind r:ctrl,s  relaunch
