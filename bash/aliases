# sublime text
alias e="subl -n ."

# boxen
alias boxon='boxen --enable-services'
alias boxoff='boxen --disable-services'

# bundler
alias b="bundle"
alias bl="b --local"
alias bu="b update"
alias be="b exec"

# git
alias g='git'
complete -F _git g # enable bash completion for the `g` alias
alias gl='git pull --prune'
alias gp='git push'
alias gd='git diff'
alias gdh='git diff HEAD'
alias gap="git add -p"
alias gc='git commit -v'
alias gca='git commit -v -a'
alias gcap='git commit -v -a && git push'
alias gb='git branch'
alias gba='git branch -a'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias gco='git branch | cut -c 3- | selecta | xargs git checkout'

# ls
alias l='ls -alh'
alias ltr='ls -ltrh'

# tail
alias tf='tail -f -n 100'
alias t500='tail -n 500'
alias t1000='tail -n 1000'
alias t2000='tail -n 2000'

# rails console
function sc() {
  if [ -x script/rails ]; then
    script/rails console
  elif [ -x script/console ]; then
    script/console
  else
    echo "no script/rails or script/console found" >&2
  fi
}

# rails server
function ss() {
  if [ -x script/rails ]; then
    script/rails server
  elif [ -x script/server ]; then
    ./script/server
  else
    echo "no script/rails or script/server found" >&2
  fi
}

# rails generate
function sg() {
  if [ -x script/rails ]; then
    script/rails generate
  elif [ -x script/generate ]; then
    script/generate
  else
    echo "no script/rails or script/server found" >&2
  fi
}

# rails
alias rdfl='rake db:fixtures:load'
alias rdm='rake db:migrate'
alias rst='touch tmp/restart.txt'
alias rmate='mate *.rb *.yml *.watchr Guardfile Rakefile README Gemfile *.markdown *.md app bin config doc examples db lib public script spec test stories features *.taskpaper'

# misc
alias reload='. ~/.bash_profile'
alias tmux="TERM=screen-256color-bce tmux"
alias h?="history | grep "
